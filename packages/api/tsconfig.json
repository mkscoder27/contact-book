{
  "compilerOptions": {
    "target": "ES2022",                          
    "module": "Node16",                          
    "moduleResolution": "node16",                 
    "allowJs": true,                             
    "checkJs": false,                            
    "strict": true,                              
    "noImplicitAny": true,                       
    "strictNullChecks": true,                    
    "sourceMap": true,                           
    "preserveConstEnums": true,                  
    "lib": ["ES2022", "DOM"],                    
    "outDir": "./build",                         
    "rootDir": "./",                          
    "typeRoots": ["./node_modules/@types"],      
    "declaration": true,                         
    "allowSyntheticDefaultImports": true,       
    "esModuleInterop": true,                     
    "forceConsistentCasingInFileNames": true,    
    "skipLibCheck": true                         
  },
  "include": ["src/**/*", "test/**/*"],          
  "exclude": ["node_modules", "build", ".build", "misc"]
}